@model CrudAspNetMVC.Models.Infra.AcessarViewModel

@{
	ViewData["tittle"] = "Controle Acesso";
	Layout = "_LayoutLogin";
}


<title>@ViewData["tittle"]</title>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
	  integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
	  integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="~/css/style.css">



<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3 class="text-center">Controle Acesso</h3>
			</div>
			<div class="card-body">
				<section>
					<form asp-route-returnurl="@ViewData[" ReturnUrl"]" method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input asp-for="Email" type="email" class="form-control" placeholder="E-mail">
						</div>
						<div>
							<span asp-validation-for="Email" class="text-danger" hidden></span>
						</div>

						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>

							<input asp-for="Senha" type="password" class="form-control" placeholder="Senha" size="10">
						</div>
						<div>
							<span asp-validation-for="Senha" class="text-danger" hidden></span>
						</div>
						<br />

						<div class="form-group">
							<div class="row align-items-center remember checkbox">
								<input asp-for="LembrarDeMim" />
								@Html.DisplayNameFor(m => m.LembrarDeMim)
							</div>
						</div>
						<div class="form-group">
							<input type="submit" value="Login" class="btn float-right login_btn">
						</div>
					</form>
				</section>
			</div>
			<div class="col-md-4">
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Não tem uma conta?<a asp-action="RegistrarNovoUsuario">Cadastrar</a>
				</div>
				<div class="d-flex justify-content-center">
					<a href="#">Esqueceu sua senha?</a>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
