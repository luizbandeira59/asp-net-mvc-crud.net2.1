@model CrudAspNetMVC.Models.Produto

@{
	ViewData["Title"] = "Deletar";
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<title>@ViewData["Title"]</title>
</head>
<body>

<h3>Você realmente deseja deletar isto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProdutoDescricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProdutoDescricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
		<div class="form-actions no-color">
			<input type="hidden" asp-for="ProdutoId" />
			<input type="submit" value="Delete" class="btn btn-danger" /> |
		</div>
        <a asp-action="Index">Voltar</a>
    </form>
</div>
</body>
</html>
