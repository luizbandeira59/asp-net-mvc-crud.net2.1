@model CrudAspNetMVC.Models.Produto

@{
	ViewData["Title"] = "Editar Produto";
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewData["Title"]</title>
</head>
<body>

	<form asp-action="Edit">
		<div class="form-horizontal">
			<h4>Produto</h4>
			<hr />

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ProdutoId" />
			<div class="form-group">
				<label asp-for="ProdutoNome" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="ProdutoNome" class="form-control" />
					<span asp-validation-for="ProdutoNome" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ProdutoDescricao" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="ProdutoDescricao" class="form-control" />
					<span asp-validation-for="ProdutoDescricao" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</div>
		</div>
	</form>


	<div>
		<a asp-action="Index">Voltar</a>
	</div>

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
</body>
</html>
