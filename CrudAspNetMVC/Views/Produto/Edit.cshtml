@model CrudAspNetMVC.Models.Produto

@{
	ViewData["Title"] = "Alterar Produto";
	Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-action="Edit">
									<input type="hidden" asp-for="ProdutoId" />
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group">
										<label asp-for="ProdutoNome" class="control-label"></label>
										<input asp-for="ProdutoNome" class="form-control" />
										<span asp-validation-for="ProdutoNome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="ProdutoDescricao" class="control-label"></label>
										<input asp-for="ProdutoDescricao" class="form-control" />
										<span asp-validation-for="ProdutoDescricao" class="text-danger"></span>
									</div>
									<div class="form-group text-center h3">
										<input type="submit" value="Atualizar Produto" class="btn btn-info btn-fill col-lg-6" />
										<a asp-action="Index" class="btn btn-fill pull-right col-lg-6">Retornar à listagem de produtos</a>										
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
