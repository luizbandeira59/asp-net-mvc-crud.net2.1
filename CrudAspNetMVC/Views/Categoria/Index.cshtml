@model IEnumerable<CrudAspNetMVC.Models.Categoria>

@{
	ViewData["Title"] = "Categorias";
	Layout = "_LayoutIES";
}

<link rel="stylesheet" href="~/assets/css/estilo-botão-tabela.css" />

@section Styles {
	<environment include="Development">
		<link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css"
			  asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
			  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
	</environment>
}

@if (@TempData["Message"] != null)
{
	<div class="alert alert-success" role="alert">
		@TempData["Message"]
	</div>
}
@if (@TempData["Message"] == null)
{

}


<body>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-9 centro">
					<div class="card">
						<hr />
						<div class="header">
							<h4 class="title">@ViewData["Title"]</h4>
						</div>
						<div class="content">
							<div class="row">
								<div class="form-group col-md-10">
									<div class="col-lg-1">
										<a asp-action="Index" style="margin-left:-15px" class="btn btn-primary btn btn-info btn-fill pull-left navbar-btn">
											<span class="glyphicon glyphicon-home"></span>
										</a>
									</div>
								</div>


								<div class="form-group col-md-12">
									<table class="table ">
										<thead>
											<tr>
												<th>
													@Html.DisplayNameFor(model => model.CatNome)
												</th>
												<th></th>
											</tr>
										</thead>

										<tbody>
											@foreach (var item in Model)
											{

												<tr>
													<td>
														@Html.DisplayFor(modelItem => item.CatNome)
													</td>
													<td>
														<a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-info fa-pull-right">
															<span class="glyphicon glyphicon-eye-open"></span>
														</a>
													</td>
												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

@section ScriptPage {
	<environment include="Development">
		<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"
				asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js">
		</script>
	</environment>

	<script type="text/javascript">
		$(document).ready(function () {
			$('#tabela_categorias').DataTable({
				"order": [[1, "asc"]]
			});
		});
	</script>
}
