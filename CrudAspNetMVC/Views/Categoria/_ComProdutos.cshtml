@model IEnumerable<CrudAspNetMVC.Models.Produto>

<div class="header title h4">
	PRODUTOS DA CATEGORIA

</div>

<div class="content">
	<table class="table table-responsive">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Categoria.CatNome)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ProdutoNome)
					</td>
					<td>					
						<a asp-controller="Produto" asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-info pull-right">
							<span class="glyphicon glyphicon-eye-open"></span>
						</a>					
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<div class="panel-footer panel-info">
</div>
