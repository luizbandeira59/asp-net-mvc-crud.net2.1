@model CrudAspNetMVC.Models.Categoria

@{
	ViewData["Title"] = "Detalhes";
	Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<link href="~/assets/css/estilo-botão-tabela.css" rel="stylesheet" />


<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<label asp-for="CategoriaId" class="control-label"></label>
								<br />
								<div class="input-group col-md-12">
									<div class="input-group-prepend">
										<span class="input-group-text">
											<i class="fa fa-key" aria-hidden="true"></i>
										</span>
									</div>
									<input asp-for="CategoriaId" class="form-control" disabled="disabled" />
								</div>
								<label asp-for="CatNome" class="control-label"></label>
								<br />
								<div class="input-group col-md-12">
									<div class="input-group-prepend">
										<span class="input-group-text">
											<i class="fa fa-user-circle" aria-hidden="true"></i>
										</span>
									</div>
									<input asp-for="CatNome" class="form-control" disabled="disabled" />
								</div>
								<div class="form-group text-left h3">
									<form>
										<a asp-action="Index" class="btn btn-info btn-fill btn-block">Retornar</a>
									</form>
								</div>
							</div>

						</div>
					</div>
					<div class="col-6">
						@{await Html.RenderPartialAsync("~/Views/Categoria/_ComProdutos.cshtml", Model.Produtos.ToList()); }
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
