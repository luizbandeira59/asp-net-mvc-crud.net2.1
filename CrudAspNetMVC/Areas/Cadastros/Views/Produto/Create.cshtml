@model Modelo.CadastrosBLL.Produto

@{
	ViewData["Title"] = "Adicionar um novo produto";
	Layout = "~/Views/Shared/_LayoutIES.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-action="Create">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group">
										<label asp-for="ProdutoNome" class="control-label hidden"></label>
										<input asp-for="ProdutoNome" placeholder="Nome do Produto" class="form-control" />
										<span asp-validation-for="ProdutoNome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="ProdutoDescricao" class="control-label hidden"></label>
										<input asp-for="ProdutoDescricao" placeholder="Descrição do Produto" class="form-control" />
										<span asp-validation-for="ProdutoDescricao" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="CategoriaId" class="control-label hidden"></label>
										<select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Categorias, "CategoriaId", "CatNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="FormaId" class="control-label hidden"></label>
										<select asp-for="FormaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Formas, "FormaId", "FormaNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="StatusId" class="control-label hidden"></label>
										<select asp-for="StatusId" class="form-control" asp-items="@(new SelectList(@ViewBag.StatusCompras, "StatusId", "StatusNome"))"></select>
									</div>
									<div class="form-group text-left h3">
										<input type="submit" value="Registrar" class="btn btn-block btn-fill" />
										<a asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section ScriptPage {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
