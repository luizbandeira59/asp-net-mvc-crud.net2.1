@model IEnumerable<Modelo.CadastrosBLL.Categoria>

@{
	ViewData["Title"] = "Categorias";
	Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<link rel="stylesheet" href="~/assets/css/estilo-botão-tabela.css" />

@section Styles {
	<environment include="Development">
		<link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css"
			  asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
			  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
	</environment>
}

@if (@TempData["Message"] != null)
{
	<div class="alert alert-success" role="alert">
		@TempData["Message"]
	</div>
}
@if (@TempData["Message"] == null)
{

}


<body>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-9 centro">
					<div class="card">
						<hr />
						<div class="header">
							<h4 class="title">@ViewData["Title"]</h4>
						</div>
						@{await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Categoria/_PartialIndexContent.cshtml", Model); }
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

@section ScriptPage {
	<environment include="Development">
		<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="http://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"
				asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js">
		</script>
	</environment>

	<script type="text/javascript">
		$(document).ready(function () {
			$('#tabela_categorias').DataTable({
				"order": [[1, "asc"]]
			});
		});
	</script>
}
